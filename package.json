{
  "name": "rimelight-components",
  "description": "A component library by Rimelight Entertainment.",
  "version": "2.0.68",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rimelight-Entertainment/rimelight-components.git"
  },
  "homepage": "https://rimelight.com/tools/rimelight-components",
  "license": "MIT",
  "keywords": [
    "rimelight",
    "typescript",
    "vue",
    "nuxt"
  ],
  "imports": {
    "#build/rimelight-components/*": "./.nuxt/rimelight-components/*.ts",
    "#build/rimelight-components.css": "./.nuxt/rimelight-components.css"
  },
  "exports": {
    ".": {
      "types": "./dist/module.d.mts",
      "style": "./dist/runtime/index.css",
      "import": "./dist/module.mjs"
    },
    "./runtime/*": "./dist/runtime/*",
    "./components/*": "./dist/runtime/components/*",
    "./composables": {
      "types": "./dist/runtime/composables/index.d.mts",
      "import": "./dist/runtime/composables/index.mjs"
    },
    "./composables/*": {
      "types": "./dist/runtime/composables/*.d.mts",
      "import": "./dist/runtime/composables/*.mjs"
    },
    "./utils": {
      "types": "./dist/runtime/utils/index.d.mts",
      "import": "./dist/runtime/utils/index.mjs"
    },
    "./utils/*": {
      "types": "./dist/runtime/utils/*.d.mts",
      "import": "./dist/runtime/utils/*.mjs"
    }
  },
  "style": "./dist/runtime/index.css",
  "main": "./dist/module.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nuxt-module-build build",
    "dev": "bun run dev:prepare && nuxt dev playground",
    "dev:build": "nuxt build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "prepack": "bun run build",
    "typecheck": "vue-tsc --noEmit && nuxt typecheck",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "oxfmt --check",
    "format:fix": "oxfmt .",
    "check": "bun run typecheck && bun run lint && bun run format",
    "fix": "bun run lint:fix && bun run format:fix",
    "test": "vitest",
    "release": "release-it --ci"
  },
  "dependencies": {
    "@nuxt/image": "^1.11.0",
    "@nuxt/kit": "^4.2.2",
    "@nuxt/ui": "^4.2.1",
    "@nuxtjs/i18n": "^10.2.1",
    "@vueuse/core": "^14.1.0",
    "@vueuse/nuxt": "^14.1.0",
    "date-fns": "^4.1.0",
    "defu": "^6.1.4",
    "drizzle-orm": "^0.45.1",
    "nuxt": "^4.2.2",
    "tailwind-variants": "^3.2.2",
    "uuid": "^13.0.0",
    "vue": "^3.5.25",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.2",
    "@nuxt/test-utils": "^3.21.0",
    "@types/node": "latest",
    "changelogen": "^0.6.2",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "release-it": "^19.1.0",
    "tailwind-merge": "^3.4.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.1.8"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "esbuild",
    "sharp",
    "vue-demi"
  ],
  "resolutions": {
    "rimelight-components": "workspace:*"
  }
}
