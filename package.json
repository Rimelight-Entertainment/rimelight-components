{
  "name": "rimelight-components",
  "version": "2.2.8",
  "description": "A component library by Rimelight Entertainment.",
  "keywords": [
    "nuxt",
    "rimelight",
    "typescript",
    "vue"
  ],
  "homepage": "https://rimelight.com/tools/rimelight-components",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rimelight-Entertainment/rimelight-components.git"
  },
  "type": "module",
  "main": "./nuxt.config.ts",
  "exports": {
    ".": "./nuxt.config.ts",
    "./composables": "./app/composables/index.ts",
    "./types": "./app/types/index.ts",
    "./utils": "./app/utils/index.ts",
    "./auth": "./shared/auth/index.ts",
    "./auth/*": "./shared/auth/*",
    "./db": "./shared/db/index.ts",
    "./components/*": "./app/components/*"
  },
  "scripts": {
    "sync": "git submodule update --init --recursive && git -C .rimelight-utilities fetch origin && git -C .rimelight-utilities checkout main && git -C .rimelight-utilities pull origin main && bun ./.rimelight-utilities/scripts/sync.ts && husky && nuxt prepare",
    "analyze": "nuxi analyze",
    "prepare": "husky && nuxt prepare",
    "dev": "bun run dev:prepare && nuxt dev playground",
    "build": "nuxt build playground",
    "dev:build": "nuxt build playground",
    "dev:prepare": "nuxt prepare playground",
    "prepack": "nuxt prepare playground",
    "typecheck": "nuxt prepare && vue-tsc --noEmit && nuxt typecheck",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "oxfmt --check",
    "format:fix": "oxfmt .",
    "i18n": "vue-i18n-extract report --vueFiles './{app,shared,server,playground}/**/*.?(js|vue|ts)' --languageFiles './app/locales/*.?(json|yml|yaml|js)'",
    "check": "bun run typecheck && bun run lint && bun run format",
    "fix": "bun run lint:fix && bun run format:fix",
    "test": "vitest"
  },
  "dependencies": {
    "@nuxt/a11y": "1.0.0-alpha.1",
    "@nuxt/icon": "^2.2.1",
    "@nuxt/image": "^2.0.0",
    "@nuxt/kit": "^4.3.1",
    "@nuxt/ui": "^4.4.0",
    "@nuxtjs/device": "^4.0.0",
    "@nuxtjs/i18n": "^10.2.3",
    "@vueuse/nuxt": "^14.2.1",
    "better-auth": "^1.4.18",
    "chroma-js": "^3.2.0",
    "date-fns": "^4.1.0",
    "defu": "^6.1.4",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "uuid": "^13.0.0",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@iconify-json/lucide": "^1.2.90",
    "@nuxt/devtools": "^3.2.1",
    "@nuxt/schema": "^4.3.1",
    "@nuxt/test-utils": "^3.23.0",
    "@tauri-apps/plugin-http": "^2.5.7",
    "@types/chroma-js": "^3.1.2",
    "@types/node": "^25.2.3",
    "@vueuse/core": "^14.2.1",
    "husky": "^9.1.7",
    "nuxt": "4.3.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vue-i18n-extract": "^2.0.7",
    "vue-tsc": "^3.2.4"
  },
  "peerDependencies": {
    "@nuxt/image": "^2.0.0",
    "@nuxt/ui": "^4.4.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@tauri-apps/plugin-http": "^2.5.7",
    "@vueuse/core": "^14.2.0",
    "@vueuse/nuxt": "^14.2.0",
    "drizzle-orm": "^0.45.1",
    "nuxt": "4.3.0",
    "vue": "^3.5.27",
    "zod": "^4.3.6"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "@tailwindcss/oxide",
    "esbuild",
    "sharp",
    "vue-demi",
    "workerd"
  ]
}
